# ===========================================
# LifePlan Navigator Environment Configuration
# ===========================================
# Copy this file to .env.local and fill in the values

# -------------------------------------------
# NextAuth.js Configuration (Required)
# -------------------------------------------

# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your-nextauth-secret-here

# Application URL (change in production)
NEXTAUTH_URL=http://localhost:3000

# -------------------------------------------
# Database Configuration
# -------------------------------------------

# PostgreSQL connection string
DATABASE_URL=postgresql://user:password@localhost:5432/lifeplan_navigator

# -------------------------------------------
# Redis Configuration (Session Storage)
# -------------------------------------------

# Redis connection URL
REDIS_URL=redis://localhost:6379

# -------------------------------------------
# Encryption Keys (Field-Level Encryption)
# -------------------------------------------

# AES-256 encryption key (32 bytes, base64 encoded)
# Generate with: openssl rand -base64 32
ENCRYPTION_KEY=your-encryption-key-here

# -------------------------------------------
# MFA Configuration
# -------------------------------------------

# Application name shown in authenticator apps
MFA_ISSUER=LifePlan Navigator

# -------------------------------------------
# Security Configuration
# -------------------------------------------

# Session timeouts (in seconds)
SESSION_IDLE_TIMEOUT=1800
SESSION_ABSOLUTE_TIMEOUT=28800

# Account lockout
ACCOUNT_LOCKOUT_THRESHOLD=5
ACCOUNT_LOCKOUT_DURATION=900

# -------------------------------------------
# CSRF Protection
# -------------------------------------------

# CSRF secret (for token generation)
# Generate with: openssl rand -base64 32
CSRF_SECRET=your-csrf-secret-here

# -------------------------------------------
# Logging Configuration
# -------------------------------------------

# Log level: debug, info, warn, error
LOG_LEVEL=info

# Enable audit logging
AUDIT_LOG_ENABLED=true

# -------------------------------------------
# External Services (Optional)
# -------------------------------------------

# Email service for notifications
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-smtp-user
# SMTP_PASSWORD=your-smtp-password
# SMTP_FROM=noreply@example.com

# -------------------------------------------
# Development Only
# -------------------------------------------

# Disable HTTPS requirement in development
# NODE_ENV=development
